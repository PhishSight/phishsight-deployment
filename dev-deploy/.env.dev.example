# ===========================================
# PhishSight Development Environment Config
# Copy to .env.dev and customize as needed
# ===========================================

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=phishsight
POSTGRES_PASSWORD=phishsight_dev_password
POSTGRES_DB=phishsight
POSTGRES_PORT=5432

# ===========================================
# Redis
# ===========================================
REDIS_PORT=6379

# ===========================================
# Port Configuration
# ===========================================
API_PORT=3001
APP_PORT=3002
SITE_PORT=3003

# ===========================================
# JWT Secrets (dev defaults are fine for local dev)
# ===========================================
JWT_SECRET=dev-jwt-secret-change-in-production-abc123
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-xyz789

# ===========================================
# Super Admin (First user created on startup)
# ===========================================
SUPER_ADMIN_EMAIL=admin@phishsight.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!

# ===========================================
# External Services (Optional)
# ===========================================
# VirusTotal API key for threat intelligence
VIRUSTOTAL_API_KEY=

# OpenRouter AI API for AI-powered analysis
OPENROUTER_API_KEY=
OPENROUTER_MODEL=deepseek/deepseek-chat

# Cloudflare Turnstile (Bot Protection)
# Get your keys from: https://dash.cloudflare.com/turnstile
# Backend secret key (for server-side verification)
TURNSTILE_SECRETKEY=
# Frontend site key (shared between app and marketing site)
# Note: NEXT_PUBLIC_ prefix makes it available to frontend
NEXT_PUBLIC_TURNSTILE_SITEKEY=

# ===========================================
# ZeptoMail Email Configuration
# Optional for dev - emails will be logged if not configured
# ===========================================
# Get your API key from: https://zeptomail.zoho.com/
ZEPTOMAIL_API_KEY=
# ZEPTOMAIL_HOST=smtp.zeptomail.com
# ZEPTOMAIL_PORT=587

# Email sender information
SMTP_FROM_NAME=PhishSight Team
SMTP_FROM_EMAIL=noreply@mail.phishsight.com
SUPPORT_EMAIL=support@phishsight.com
SALES_EMAIL=sales@phishsight.com

# App URLs for email links
APP_URL=http://localhost:3002
APP_NAME=PhishSight

# ===========================================
# URLs Configuration
# ===========================================
# Frontend app URL (for CORS)
FRONTEND_URL=http://localhost:3002

# Marketing site URL (for CORS - lead gen forms)
MARKETING_SITE_URL=http://localhost:3003

# Marketing site environment variables
# API endpoint for form submissions
SITE_API_URL=http://localhost:3001
# App dashboard URL for CTAs
SITE_APP_URL=http://localhost:3002

# ===========================================
# Google OAuth (Sign in with Google)
# ===========================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for Web application
# Add authorized JavaScript origins: https://app.phishsight.com, http://localhost:3002
# Add authorized redirect URIs: https://app.phishsight.com, http://localhost:3002
GOOGLE_CLIENT_ID=712321132519-hubjq4d0h9r79d98314h6f8fs65u4stb.apps.googleusercontent.com
NEXT_PUBLIC_GOOGLE_CLIENT_ID=712321132519-hubjq4d0h9r79d98314h6f8fs65u4stb.apps.googleusercontent.com

# ===========================================
# SEO & Analytics
# ===========================================
# Public URLs for SEO (canonical URLs, sitemaps, Open Graph)
# These should match the actual public URLs where apps are hosted
PUBLIC_SITE_URL=http://localhost:3003
PUBLIC_APP_URL=http://localhost:3002

# Google Search Console verification (optional for dev)
# Get from: https://search.google.com/search-console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Google Analytics Measurement ID
# Get from: https://analytics.google.com/ → Admin → Data Streams
# Format: G-XXXXXXXXXX
# Site (marketing): G-8Y7KFEFB8H
# App (dashboard):  G-KR8PGFFQPM
NEXT_PUBLIC_GA_MEASUREMENT_ID_SITE=G-8Y7KFEFB8H
NEXT_PUBLIC_GA_MEASUREMENT_ID_APP=G-KR8PGFFQPM

# ===========================================
# AWS S3 Configuration (for avatar uploads)
# Optional for dev - avatar uploads will be disabled if not configured
# ===========================================
# AWS Access Key ID
AWS_ACCESS_KEY_ID=
# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=
# AWS Region (e.g., us-east-1, eu-west-1)
AWS_REGION=us-east-1
# S3 Bucket Name
AWS_S3_BUCKET=
AWS_S3_BUCKET_EML=
# S3 Endpoint (optional - for S3-compatible services like DigitalOcean Spaces, MinIO)
# Leave empty for standard AWS S3
# AWS_S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
